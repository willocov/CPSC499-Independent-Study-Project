
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p1="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            p1:text="BOL: "
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblBOL" />
        <EditText
            p1:inputType="text"
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/txtBOL" />
        <Button
            p1:text="Scan"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/btnBOL" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Customer:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblCustomer" />
        <EditText
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:editable="false"
            p1:id="@+id/txtCustomer" />
      

    </LinearLayout>
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Barcode:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblBarcode" />
        <EditText
            p1:inputType="text"
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/txtBarcode" />
        <Button
            p1:text="Scan"
            p1:layout_width="match_parent"
            p1:layout_height="wrap_content"
            p1:id="@+id/btnBarcode" />

    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Status:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblTotalScans" />
        <EditText
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:editable="false"
            p1:id="@+id/txtTotalScans" />
      

    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Item Nbr:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblItemNbr"/>
        <EditText
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:editable="false"
            p1:id="@+id/txtItemNbr" />
      

    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Item Date:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblDate" />
        <EditText
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/txtDate"
            p1:editable="false"
            />
      

    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Item Lot:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblLot" />
        <EditText
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:editable="false"
            p1:id="@+id/txtLot" />
      

    </LinearLayout>
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            p1:text="Item Wgt:"
            p1:textAppearance="?android:attr/textAppearanceLarge"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/lblWeight" />
        <EditText
            p1:layout_width="175dp"
            p1:layout_height="wrap_content"
            p1:editable="false"
            p1:id="@+id/txtWeight" />
      

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    
        <Button
            p1:text="Enter"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/btnEnter" />

          <Button
            p1:text="Cancel"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/btnCancel" />

             <Button
            p1:text="Undo Last"
            p1:layout_width="125dp"
            p1:layout_height="wrap_content"
            p1:id="@+id/btnUndo" />

    </LinearLayout>
    
</LinearLayout>