
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="BOL Number:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="41.5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/BOLEditDetailsTextView1"
        android:layout_marginBottom="6.5dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="41.5dp"
        android:layout_toRightOf="@id/BOLEditDetailsTextView1"
        android:id="@+id/BOLEditDetailsEditText1" />
    <TextView
        android:text="Customer Name:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="42.2dp"
        android:layout_below="@id/BOLEditDetailsTextView1"
        android:id="@+id/BOLEditDetailsTextView2"
        android:layout_marginTop="0.0dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48.7dp"
        android:layout_toRightOf="@id/BOLEditDetailsTextView2"
        android:id="@+id/BOLEditDetailsEditText2"
        android:layout_below="@id/BOLEditDetailsEditText1" />
    <TextView
        android:text="Customer Code:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="39.6dp"
        android:layout_below="@id/BOLEditDetailsTextView2"
        android:id="@+id/BOLEditDetailsTextView3" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="41.5dp"
        android:layout_below="@id/BOLEditDetailsEditText2"
        android:id="@+id/BOLEditDetailsEditText3"
        android:layout_toRightOf="@id/BOLEditDetailsTextView3" />
    <ListView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="394.5dp"
        android:layout_below="@id/BOLEditDetailsTextView3"
        android:id="@+id/BOLEditDetailsListview"
        android:layout_marginBottom="0.0dp" />
    <Button
        android:text="New"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BOLEditDetailsListview"
        android:id="@+id/BOLEditDetailsBtnAdd" />
    <Button
        android:text="Edit"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/BOLEditDetailsBtnAdd"
        android:id="@+id/BOLEditDetailsBtnEdit"
        android:layout_below="@id/BOLEditDetailsListview" />
    <Button
        android:text="Delete"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/BOLEditDetailsBtnEdit"
        android:id="@+id/BOLEditDetailsBtnDelete"
        android:layout_below="@id/BOLEditDetailsListview" />
</RelativeLayout>